<web-fragment version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-fragment_6_0.xsd"
              metadata-complete="true">

  <name>ubo_commons</name>

  <servlet id="DozBibServlet">
    <servlet-name>DozBibServlet</servlet-name>
    <servlet-class>org.mycore.ubo.DozBibServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DozBibServlet</servlet-name>
    <url-pattern>/servlets/DozBibServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>DozBibServlet</servlet-name>
    <url-pattern>/servlets/DozBibServlet/*</url-pattern>
  </servlet-mapping>

  <servlet id="NewPublicationWizard">
    <servlet-name>NewPublicationWizard</servlet-name>
    <servlet-class>org.mycore.ubo.NewPublicationWizard</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>NewPublicationWizard</servlet-name>
    <url-pattern>/servlets/NewPublicationWizard</url-pattern>
  </servlet-mapping>

  <servlet id="DozBibEntryServlet">
    <servlet-name>DozBibEntryServlet</servlet-name>
    <servlet-class>org.mycore.ubo.DozBibEntryServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DozBibEntryServlet</servlet-name>
    <url-pattern>/servlets/DozBibEntryServlet</url-pattern>
  </servlet-mapping>

  <servlet id="RelationEditorServlet">
    <servlet-name>RelationEditorServlet</servlet-name>
    <servlet-class>org.mycore.ubo.relations.RelationEditorServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RelationEditorServlet</servlet-name>
    <url-pattern>/servlets/RelationEditorServlet</url-pattern>
  </servlet-mapping>

  <servlet id="DozBibImportServlet">
    <servlet-name>DozBibImportServlet</servlet-name>
    <servlet-class>org.mycore.ubo.importer.DozBibImportServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DozBibImportServlet</servlet-name>
    <url-pattern>/servlets/DozBibImportServlet</url-pattern>
  </servlet-mapping>

  <servlet id="Results2Basket">
    <servlet-name>Results2Basket</servlet-name>
    <servlet-class>org.mycore.ubo.basket.Results2Basket</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Results2Basket</servlet-name>
    <url-pattern>/servlets/Results2Basket</url-pattern>
  </servlet-mapping>

  <servlet id="BasketName2PIDEditor">
    <servlet-name>BasketName2PIDEditor</servlet-name>
    <servlet-class>org.mycore.ubo.basket.BasketName2PIDEditor</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>BasketName2PIDEditor</servlet-name>
    <url-pattern>/servlets/BasketName2PIDEditor</url-pattern>
  </servlet-mapping>

  <servlet id="OAI">
    <servlet-name>OAI</servlet-name>
    <servlet-class>org.mycore.oai.MCROAIDataProvider</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>OAI</servlet-name>
    <url-pattern>/oai</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>CascadingLoginServlet</servlet-name>
    <servlet-class>org.mycore.ubo.login.CascadingLoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CascadingLoginServlet</servlet-name>
    <url-pattern>/servlets/CascadingLoginServlet</url-pattern>
  </servlet-mapping>

  <servlet id="EnrichmentDebuggerServlet">
    <servlet-name>EnrichmentDebuggerServlet</servlet-name>
    <servlet-class>org.mycore.mods.enrichment.EnrichmentDebuggerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EnrichmentDebuggerServlet</servlet-name>
    <url-pattern>/servlets/EnrichmentDebuggerServlet</url-pattern>
  </servlet-mapping>

  <servlet id="DozBibORCIDUserServlet">
    <servlet-name>DozBibORCIDUserServlet</servlet-name>
    <servlet-class>org.mycore.ubo.orcid.DozBibORCIDUserServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DozBibORCIDUserServlet</servlet-name>
    <url-pattern>/servlets/DozBibORCIDUserServlet</url-pattern>
  </servlet-mapping>

  <session-config>
    <session-timeout>30</session-timeout>
  </session-config>

  <welcome-file-list>
    <welcome-file>index.xed</welcome-file>
    <welcome-file>index.xml</welcome-file>
  </welcome-file-list>

  <servlet>
    <servlet-name>Dedup</servlet-name>
    <servlet-class>org.mycore.ubo.HeadingExtendedVueRootServlet</servlet-class>
    <init-param>
      <param-name>heading</param-name>
      <param-value>ubo.duplicates.heading</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>Dedup</servlet-name>
    <url-pattern>/dedup/*</url-pattern>
  </servlet-mapping>


  <servlet>
    <servlet-name>ListWizard</servlet-name>
    <servlet-class>org.mycore.ubo.HeadingExtendedVueRootServlet</servlet-class>
    <init-param>
      <param-name>heading</param-name>
      <param-value>listWizard.description.title</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>ListWizard</servlet-name>
    <url-pattern>/list-wizard.xed</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AuthorSearch</servlet-name>
    <servlet-class>org.mycore.ubo.HeadingExtendedVueRootServlet</servlet-class>
    <init-param>
      <param-name>heading</param-name>
      <param-value>lsf.heading</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>AuthorSearch</servlet-name>
    <url-pattern>/identitypicker.html</url-pattern>
  </servlet-mapping>

  
  <servlet>
    <servlet-name>ListWizardConfigHelper</servlet-name>
    <servlet-class>org.mycore.frontend.servlets.MCRConfigHelperServlet</servlet-class>
    <init-param>
      <param-name>Properties</param-name>
      <param-value>MCR.user2.matching.lead_id,UBO.Search.PersonalList.Roles,UBO.Editor.PartOf.Enabled,UBO.Search.PersonalList.Ids</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>ListWizardConfigHelper</servlet-name>
    <url-pattern>/wizard-config.json</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>AuthorSearchConfigHelper</servlet-name>
    <servlet-class>org.mycore.frontend.servlets.MCRConfigHelperServlet</servlet-class>
    <init-param>
      <param-name>Properties</param-name>
      <param-value>MCR.user2.matching.lead_id</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>AuthorSearchConfigHelper</servlet-name>
    <url-pattern>/author-search-config.json</url-pattern>
  </servlet-mapping>

</web-fragment>
